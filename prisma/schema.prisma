// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Server {
  id            Int       @id @default(autoincrement())
  name          String
  uri           String
  interval      Int       @default(30) 
  lastBackup    DateTime 
  enabled       Boolean   @default(true)
  gdriveDirId   String?
}